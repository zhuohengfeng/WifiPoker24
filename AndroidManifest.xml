<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ryan_xm.wifipoke24"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"/>
    
	<uses-permission android:name = "android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name = "android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name = "android.permission.CHANGE_WIFI_STATE" />
	<uses-permission android:name = "android.permission.INTERNET" />
	<uses-permission android:name="android.permission.VIBRATE"/>
	
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
		<activity android:name=".activity.NewGameActivity" android:label="@string/app_name" android:screenOrientation="portrait" />
		<activity android:name=".activity.NewGameWaitingActivity" android:label="@string/app_name" android:screenOrientation="portrait" />
		<activity android:name=".activity.JoinGameActivity" android:label="@string/app_name" android:screenOrientation="portrait" />
		<activity android:name=".activity.JoinGameWaitingActivity" android:label="@string/app_name" android:screenOrientation="portrait" />
		<activity android:name=".activity.MultiGameActivity" android:label="@string/app_name" android:screenOrientation="portrait" />
		<activity android:name=".activity.SingleGameActivity" android:label="@string/app_name" android:screenOrientation="portrait" />
    	<activity android:name=".activity.SettingGameActivity" android:label="@string/app_name" android:screenOrientation="portrait" />
    </application>

</manifest>
